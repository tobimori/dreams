{
  "name": "dreams",
  "description": "Dreams is a beautiful and clean travel-inspired open-source theme for Ghost written with SCSS & Handlebars.",
  "version": "1.0.0",
  "scripts": {
    "start": "gulp && gulp develop",
    "build": "gulp",
    "start-ghost-via-cli": "cd ../../../ && ghost start",
    "stop-ghost-via-cli": "cd ../../../ && ghost stop",
    "restart-ghost-via-cli": "cd ../../../ && ghost restart"
  },
  "engines": {
    "ghost": ">=3.0.0",
    "ghost-api": "v3"
  },
  "license": "cc-by-4.0",
  "author": {
    "name": "tobimori",
    "email": "tobias@moeritz.cc",
    "url": "https://moeritz.cc"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Blog"
    ]
  },
  "keywords": [
    "ghost-theme",
    "ghost",
    "theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tobimori/dreams/"
  },
  "bugs": "https://github.com/tobimori/dreams/issues",
  "devDependencies": {
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-dart-sass": "^1.0.0",
    "sass": "^1.26.3"
  },
  "config": {
    "posts_per_page": 4
  }
}
